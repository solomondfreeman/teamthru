{#
/**
 * @file
 * TeamThru theme implementation for the front page.
 */
#}

{# Government Banner #}
<div class="gov-banner">
  <div class="gov-banner__inner">
    <div class="gov-banner__flag" aria-hidden="true"></div>
    <span class="gov-banner__text">
      <strong>TeamThru</strong> is a Minority-Owned, Veteran-Owned Small Business
    </span>
  </div>
</div>

{# Site Header #}
<header class="site-header" id="top">
  <div class="header__top">
    <div class="header__inner">
      <div class="header__logo">
        <a href="{{ path('<front>') }}" rel="home" aria-label="{{ 'Home'|t }}">
          <img src="/{{ directory }}/images/logo-white.png" alt="{{ 'TeamThru'|t }}" />
        </a>
        <span class="header__tagline">Application Modernization & Cloud Engineering</span>
      </div>

      <div class="header__actions">
        {% if page.header_search %}
          <div class="header__search">
            {{ page.header_search }}
          </div>
        {% endif %}

        <button class="menu-toggle" aria-label="{{ 'Toggle navigation menu'|t }}" aria-expanded="false">
          <span class="menu-toggle__bar"></span>
          <span class="menu-toggle__bar"></span>
          <span class="menu-toggle__bar"></span>
        </button>
      </div>
    </div>
  </div>

  <nav class="main-nav" aria-label="{{ 'Main navigation'|t }}">
    <div class="main-nav__inner">
      {# Mobile Search - Shows when header search is hidden #}
      <div class="mobile-search">
        <form class="mobile-search__form" action="/search/node" method="get" role="search" accept-charset="UTF-8">
          <input type="search" name="keys" class="mobile-search__input" placeholder="{{ 'Search...'|t }}" aria-label="{{ 'Search'|t }}">
          <button type="submit" class="mobile-search__btn" aria-label="{{ 'Submit search'|t }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
        </form>
      </div>
      {{ page.primary_menu }}
    </div>
  </nav>
</header>

<div class="nav-overlay"></div>

{# Hero Section #}
{% if page.hero %}
  {{ page.hero }}
{% else %}
  <section class="hero hero--large">
    {# Logo Watermark #}
    <img src="/{{ directory }}/images/logo.png" alt="" class="hero__watermark" aria-hidden="true" />
    
    <div class="hero__inner">
      <div class="hero__content">
        <span class="hero__badge">Minority & Veteran Owned</span>
        <h1 class="hero__title">Modernize Your Mission. <span>Strengthen Your Future.</span></h1>
        <p class="hero__description">TeamThru delivers hands-on application modernization, custom development, and infrastructure engineering across on-premises, hybrid, and cloud environments.</p>
        <div class="hero__cta">
          <a href="#services" class="btn btn--primary">Explore Services</a>
          <a href="#contact" class="btn btn--outline-light">Contact Us</a>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{# Main Content #}
<main id="main-content" class="main-content" role="main">
  {% if page.highlighted %}
    <div class="highlighted">
      <div class="container">
        {{ page.highlighted }}
      </div>
    </div>
  {% endif %}

  {% if page.content_top %}
    <div class="container">
      <div class="region region-content-top">
        {{ page.content_top }}
      </div>
    </div>
  {% endif %}

  <div class="container">
    {{ page.content }}
  </div>

  {% if page.content_bottom %}
    <div class="container">
      <div class="region region-content-bottom">
        {{ page.content_bottom }}
      </div>
    </div>
  {% endif %}
</main>

{# Site Footer - Same as page.html.twig #}
<footer class="site-footer" id="contact">
  <div class="footer__main">
    <div class="footer__grid">
      {# Footer Brand - Always show #}
      <div class="footer__brand">
        <a href="{{ path('<front>') }}" rel="home">
          <img src="/{{ directory }}/images/logo-white.png" alt="{{ 'TeamThru'|t }}" />
        </a>
        <p>TeamThru delivers hands-on application modernization, custom development, and infrastructure engineering aligned to mission and compliance needs.</p>
      </div>

      {# Footer Navigation Columns #}
      {% if page.footer_first %}
        <div class="footer__nav">
          {{ page.footer_first }}
        </div>
      {% else %}
        <nav class="footer__nav">
          <h4 class="footer__nav-title">Services</h4>
          <ul class="footer__nav-list">
            <li><a href="/services">Application Modernization</a></li>
            <li><a href="/services">Cloud Engineering</a></li>
            <li><a href="/services">DevSecOps</a></li>
            <li><a href="/services">M365 Solutions</a></li>
            <li><a href="/services">Security & Compliance</a></li>
          </ul>
        </nav>
      {% endif %}

      {% if page.footer_second %}
        <div class="footer__nav">
          {{ page.footer_second }}
        </div>
      {% else %}
        <nav class="footer__nav">
          <h4 class="footer__nav-title">Company</h4>
          <ul class="footer__nav-list">
            <li><a href="/about">About Us</a></li>
            <li><a href="/about">Our Team</a></li>
            <li><a href="/contact">Careers</a></li>
            <li><a href="/contracts">Contracts</a></li>
            <li><a href="/contracts">Past Performance</a></li>
          </ul>
        </nav>
      {% endif %}

      {% if page.footer_third %}
        <div class="footer__nav">
          {{ page.footer_third }}
        </div>
      {% else %}
        <nav class="footer__nav">
          <h4 class="footer__nav-title">Contact</h4>
          <ul class="footer__nav-list">
            <li><a href="mailto:info@teamthru.com">info@teamthru.com</a></li>
            <li><a href="/contact">Contact Form</a></li>
            <li><a href="/contact">Request a Quote</a></li>
          </ul>
        </nav>
      {% endif %}
    </div>

    {# Footer Social #}
